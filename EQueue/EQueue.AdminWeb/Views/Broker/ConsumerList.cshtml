@model EQueue.AdminWeb.Models.BrokerConsumerListViewModel
@{
    ViewBag.Title = "在线消费者列表";
    Layout = "~/Views/Shared/_BrokerLayout.cshtml";
}
<div>
    @using (Html.BeginForm("ConsumerList", "Broker", new { clusterName = ViewBag.ClusterName, brokerName = ViewBag.BrokerName }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="form-group">
            <label class="sr-only" for="Group"></label>
            @Html.TextBoxFor(m => m.Group, new { @class = "form-control", placeholder = "Group" })
        </div>
        <div class="form-group">
            <label class="sr-only" for="Topic"></label>
            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control", placeholder = "Topic" })
        </div>
        <button type="submit" class="btn btn-default">查询</button>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="15%" class="vertical-center">
                    ConsumerGroup
                </th>
                <th width="20%" class="vertical-center">
                    ConsumerId
                </th>
                <th width="15%" class="vertical-center">
                    Topic
                </th>
                <th width="10%" class="text-center vertical-center">
                    QueueId
                </th>
                <th width="10%" class="text-center vertical-center">
                    CurrentOffset
                </th>
                <th width="10%" class="text-center vertical-center">
                    消费进度
                </th>
                <th width="10%" class="text-center vertical-center">
                    堆积数
                </th>
                <th width="10%" class="text-center vertical-center">
                    CacheCount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ConsumerList)
            {
                <tr>
                    <td class="vertical-center">
                        @item.ConsumerGroup
                    </td>
                    <td class="vertical-center">
                        @item.ConsumerId
                    </td>
                    <td class="vertical-center">
                        @item.Topic
                    </td>
                    <td class="text-center vertical-center">
                        @item.QueueId
                    </td>
                    <td class="text-center vertical-center">
                        @item.QueueCurrentOffset
                    </td>
                    <td class="text-center vertical-center">
                        @item.ConsumedOffset
                    </td>
                    <td class="text-center vertical-center">
                        @item.QueueNotConsumeCount
                    </td>
                    <td class="text-center vertical-center">
                        @item.ClientCachedMessageCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
