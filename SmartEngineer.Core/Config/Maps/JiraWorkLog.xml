<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="JiraWorkLog"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="Account.RedisCache" Type="SmartSql.Cache.Redis.RedisCacheProvider,SmartSql.Cache.Redis">
      <Parameter Key="CacheSize" Value="1000"/>
      <Parameter Key="ConnectionString" Value="192.168.31.103"/>
      <Parameter Key="DatabaseId" Value="0"/>
      <FlushInterval Hours="24" Minutes="0" Seconds="0"/>
      <FlushOnExecute Statement="JiraWorkLog.Insert"/>
      <FlushOnExecute Statement="JiraWorkLog.Update"/>
    </Cache>
  </Caches>
  <Statements>
    <Statement Id="QueryParams">
      <Dynamic Prepend="Where">
        <IsNotEmpty Property="WorklogID" Prepend="And">
          WorklogID = @WorklogID
        </IsNotEmpty>
        <IsNotEmpty Property="ID" Prepend="And">
          ID = @ID
        </IsNotEmpty>
      </Dynamic>      
    </Statement>
    
    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO JiraWorkLog
      (ID
      ,WorklogID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,TimeSpentHours
      ,TimeSpendSeconds
      ,ParentJiraKey
      ,LastUpdateTime
      ,LastUpdateUserID)
      VALUES
      (@ID
      ,@WorklogID
      ,@CommentBody
      ,@CreatedByID
      ,@CreatedByName
      ,@CreatedDateTime
      ,@LastModifiedByID
      ,@LastModifiedByName
      ,@LastModifiedDateTime
      ,@TimeSpentHours
      ,@TimeSpendSeconds
      ,@ParentJiraKey
      ,@LastUpdateTime
      ,@LastUpdateUserID);
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete JiraWorkLog
      <Include RefId="QueryParams"/>
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE JiraWorkLog
      SET
      WorklogID=@WorklogID
      ,CommentBody=@CommentBody
      ,CreatedByID=@CreatedByID
      ,CreatedByName=@CreatedByName
      ,CreatedDateTime=@CreatedDateTime
      ,LastModifiedByID=@LastModifiedByID
      ,LastModifiedByName=@LastModifiedByName
      ,LastModifiedDateTime=@LastModifiedDateTime
      ,TimeSpentHours=@TimeSpentHours
      ,TimeSpendSeconds=@TimeSpendSeconds
      ,ParentJiraKey=@ParentJiraKey
      ,LastUpdateTime=@LastUpdateTime
      ,LastUpdateUserID=@LastUpdateUserID
      <Include RefId="QueryParams"/>
    </Statement>
   
    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From JiraWorkLog
      <Where>
        <IsNotEmpty Property="WorklogID" Prepend="And">
          WorklogID = @WorklogID
        </IsNotEmpty>
      </Where>
    </Statement>

    <!--获取单条记录 -->
    <Statement Id="GetEntity">
      SELECT ID
      ,WorklogID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,TimeSpentHours
      ,TimeSpendSeconds
      ,ParentJiraKey
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM JiraWorkLog
      <Include RefId="QueryParams"/>
    </Statement>

    <!--获取多条记录 -->
    <Statement Id="GetEntities">
      SELECT  ID
      ,WorklogID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,TimeSpentHours
      ,TimeSpendSeconds
      ,ParentJiraKey
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM JiraWorkLog
      <Where>
        <IsNotEmpty Property="ParentJiraKey" Prepend="And">
          ParentJiraKey = @ParentJiraKey
        </IsNotEmpty>
      </Where>
  </Statement>

  </Statements>
</SmartSqlMap>