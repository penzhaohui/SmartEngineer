<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="Tenant"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="Account.RedisCache" Type="SmartSql.Cache.Redis.RedisCacheProvider,SmartSql.Cache.Redis">
      <Parameter Key="CacheSize" Value="1000"/>
      <Parameter Key="ConnectionString" Value="192.168.31.103"/>
      <Parameter Key="DatabaseId" Value="0"/>
      <FlushInterval Hours="24" Minutes="0" Seconds="0"/>
      <FlushOnExecute Statement="SFCase.Insert"/>
      <FlushOnExecute Statement="SFCase.Update"/>
    </Cache>
  </Caches>
  <Statements>
    <Statement Id="QueryParams">
      <Dynamic Prepend="Where">
        <IsGreaterThan CompareValue="0" Property="ID" Prepend="And">
          ID = @ID
        </IsGreaterThan>
        <IsNotEmpty Property="Name" Prepend="And">
          Name = @Name
        </IsNotEmpty>
      </Dynamic>      
    </Statement>
    
    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO sys_Tenant
      (ID
      ,Name
      ,Description
      ,DomainPattern
      ,CreateDate
      ,IsActive
      ,TimeZone
      ,MaxAccountNumber
      ,LastUpdateTime
      ,LastUpdateUserID)
      VALUES
      (@ID
      ,@Name
      ,@Description
      ,@DomainPattern
      ,@CreateDate
      ,@IsActive
      ,@TimeZone
      ,@MaxAccountNumber
      ,@LastUpdateTime
      ,@LastUpdateUserID);
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete sys_Tenant
      <Include RefId="QueryParams"/>
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE sys_Tenant
      SET
      Name=@Name,
      Description=@Description,
      DomainPattern=@DomainPattern,
      IsActive=@IsActive,
      TimeZone=@TimeZone,
      MaxAccountNumber=@MaxAccountNumber,
      LastUpdateTime=@LastUpdateTime,
      LastUpdateUserID=@LastUpdateUserID
      Where ID=@ID
    </Statement>
   
    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From sys_Tenant
      <Include RefId="QueryParams"/>
    </Statement>

    <!--获取单条记录 -->
    <Statement Id="GetEntity">
      SELECT ID
      ,Name
      ,Description
      ,DomainPattern
      ,CreateDate
      ,IsActive
      ,TimeZone
      ,MaxAccountNumber
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM sys_Tenant
      <Include RefId="QueryParams"/>
      Order by ID ASC
    </Statement>

    <!--获取多条记录 -->
    <Statement Id="GetList">
      SELECT ID
      ,Name
      ,Description
      ,DomainPattern
      ,CreateDate
      ,IsActive
      ,TimeZone
      ,MaxAccountNumber
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM sys_Tenant
      <Include RefId="QueryParams"/>
      Order by ID ASC
  </Statement>

  </Statements>
</SmartSqlMap>