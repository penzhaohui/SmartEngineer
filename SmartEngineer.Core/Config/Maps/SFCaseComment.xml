<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="CaseCommentInfo"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="Account.RedisCache" Type="SmartSql.Cache.Redis.RedisCacheProvider,SmartSql.Cache.Redis">
      <Parameter Key="CacheSize" Value="1000"/>
      <Parameter Key="ConnectionString" Value="192.168.31.103"/>
      <Parameter Key="DatabaseId" Value="0"/>
      <FlushInterval Hours="24" Minutes="0" Seconds="0"/>
      <FlushOnExecute Statement="SFCaseComment.Insert"/>
      <FlushOnExecute Statement="SFCaseComment.Update"/>
    </Cache>
  </Caches>
  <Statements>
    <Statement Id="QueryParams">
      <Dynamic Prepend="Where">
        <IsNotEmpty Property="CommentID" Prepend="And">
          CommentID = @CommentID
        </IsNotEmpty>
        <IsNotEmpty Property="CaseNumber" Prepend="And">
          CaseNumber = @CaseNumber
        </IsNotEmpty>
        <IsNotEmpty Property="CaseID" Prepend="And">
          CaseID = @CaseID
        </IsNotEmpty>
      </Dynamic>      
    </Statement>
    
    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO SFCaseComment
      (ID
      ,CommentID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,CaseID
      ,CaseNumber
      ,IsPublished
      ,LastUpdateTime
      ,LastUpdateUserID)
      VALUES
      (@ID
      ,@CommentID
      ,@CommentBody
      ,@CreatedByID
      ,@CreatedByName
      ,@CreatedDateTime
      ,@LastModifiedByID
      ,@LastModifiedByName
      ,@LastModifiedDateTime
      ,@CaseID
      ,@CaseNumber
      ,@IsPublished
      ,@LastUpdateTime
      ,@LastUpdateUserID);
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete SFCaseComment
      Where ID=@ID
    </Statement>    

    <!--更新-->
    <Statement Id="Update">
      UPDATE SFCaseComment
      SET
      CommentID=@CommentID,
      CommentBody=@CommentBody,
      CreatedByID=@CreatedByID,
      CreatedByName=@CreatedByName,
      CreatedDateTime=@CreatedDateTime,
      LastModifiedByID=@LastModifiedByID,
      LastModifiedByName=@LastModifiedByName,
      LastModifiedDateTime=@LastModifiedDateTime,
      CaseID=@CaseID,
      CaseNumber=@CaseNumber,
      IsPublished=@IsPublished,
      LastUpdateTime=@LastUpdateTime,
      LastUpdateUserID=@LastUpdateUserID
      Where ID=@ID
    </Statement>
   
    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From SFCaseComment
      <Include RefId="QueryParams"/>
    </Statement>

    <!--获取单条记录 -->
    <Statement Id="GetEntity">
      SELECT ID
      ,CommentID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,CaseID
      ,CaseNumber
      ,IsPublished
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM SFCaseComment
      <Include RefId="QueryParams"/>
      Order by ID ASC
    </Statement>

    <!--获取多条记录 -->
    <Statement Id="GetEntities">
      SELECT ID
      ,CommentID
      ,CommentBody
      ,CreatedByID
      ,CreatedByName
      ,CreatedDateTime
      ,LastModifiedByID
      ,LastModifiedByName
      ,LastModifiedDateTime
      ,CaseID
      ,CaseNumber
      ,IsPublished
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM SFCase
      <Where>
        <IsNotEmpty Prepend="And" Property="CaseNumber" In="true"/>
        <IsNotEmpty Prepend="And" Property="CaseID" In="true"/>
      </Where>
    </Statement>

  </Statements>
</SmartSqlMap>