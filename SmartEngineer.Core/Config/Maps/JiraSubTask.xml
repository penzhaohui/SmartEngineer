<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="JiraSubTask"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="Account.RedisCache" Type="SmartSql.Cache.Redis.RedisCacheProvider,SmartSql.Cache.Redis">
      <Parameter Key="CacheSize" Value="1000"/>
      <Parameter Key="ConnectionString" Value="192.168.31.103"/>
      <Parameter Key="DatabaseId" Value="0"/>
      <FlushInterval Hours="24" Minutes="0" Seconds="0"/>
      <FlushOnExecute Statement="JiraSubTask.Insert"/>
      <FlushOnExecute Statement="JiraSubTask.Update"/>
    </Cache>
  </Caches>
  <Statements>
    <Statement Id="QueryParams">
      <Dynamic Prepend="Where">
        <IsNotEmpty Property="JiraKey" Prepend="And">
          JiraKey = @JiraKey
        </IsNotEmpty>
        <IsNotEmpty Property="Type" Prepend="And">
          Type = @Type
        </IsNotEmpty>
        <IsNotEmpty Property="Summary" Prepend="And">
          Summary = @Summary
        </IsNotEmpty>
        <IsNotEmpty Property="ParentJiraKey" Prepend="And">
          ParentJiraKey = @ParentJiraKey
        </IsNotEmpty>
      </Dynamic> 
    </Statement>
    
    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO JiraSubTask
      (ID
      ,JiraKey
      ,Type
      ,Summary
      ,Description
      ,Assignee
      ,AssigneeQA
      ,TotalTimeSpentHours
      ,Status
      ,ParentJiraKey
      VALUES
      (@ID
      ,@JiraKey
      ,@Type
      ,@Summary
      ,@Description
      ,@Assignee
      ,@AssigneeQA
      ,@TotalTimeSpentHours
      ,@Status
      ,@ParentJiraKey);
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete JiraSubTask
      Where ID=@ID
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE JiraSubTask
      SET
        JiraKey=@JiraKey
        ,Type=@Type
        ,Summary=@Summary
        ,Description=@Description
        ,Assignee=@Assignee
        ,AssigneeQA=@AssigneeQA
        ,TotalTimeSpentHours=@TotalTimeSpentHours
        ,Status=@Status
        ,ParentJiraKey=@ParentJiraKey
      Where ID=@ID
    </Statement>
   
    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From JiraSubTask
      <Where>
        <IsNotEmpty Property="JiraKey" Prepend="And">
          JiraKey = @JiraKey
        </IsNotEmpty>
        <IsNotEmpty Property="Type" Prepend="And">
          Type = @Type
        </IsNotEmpty>
    </Where>
    </Statement>

    <!--获取单条记录 -->
    <Statement Id="GetEntity">
      SELECT ID
      ,JiraKey
      ,Type
      ,Summary
      ,Description
      ,Assignee
      ,AssigneeQA
      ,TotalTimeSpentHours
      ,Status
      ,ParentJiraKey
      FROM JiraSubTask
      <Where>
        <IsNotEmpty Property="ParentJiraKey" Prepend="And">
          ParentJiraKey = @ParentJiraKey
        </IsNotEmpty>
        <IsNotEmpty Property="Summary" Prepend="And">
          Summary = @Summary
        </IsNotEmpty>
    </Where>
      Order by ID ASC
    </Statement>

    <!--获取多条记录 -->
    <Statement Id="GetEntities">
      SELECT ID
      ,JiraKey
      ,Type
      ,Summary
      ,Description
      ,Assignee
      ,AssigneeQA
      ,TotalTimeSpentHours
      ,Status
      ,ParentJiraKey
      FROM JiraSubTask
      <Include RefId="QueryParams"/>
    </Statement>

  </Statements>
</SmartSqlMap>