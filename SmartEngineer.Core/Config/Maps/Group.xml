<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="Group"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <Caches>
    <Cache Id="Account.RedisCache" Type="SmartSql.Cache.Redis.RedisCacheProvider,SmartSql.Cache.Redis">
      <Parameter Key="CacheSize" Value="1000"/>
      <Parameter Key="ConnectionString" Value="192.168.31.103"/>
      <Parameter Key="DatabaseId" Value="0"/>
      <FlushInterval Hours="24" Minutes="0" Seconds="0"/>
      <FlushOnExecute Statement="admin_Group.Insert"/>
      <FlushOnExecute Statement="admin_Group.Update"/>
    </Cache>
  </Caches>
  <Statements>
    <Statement Id="QueryParams">
      <Dynamic Prepend="Where">
        <IsGreaterThan CompareValue="0" Property="ID" Prepend="And">
          ID = @ID
        </IsGreaterThan>
        <IsNotEmpty Property="Name" Prepend="And">
          Name = @Name
        </IsNotEmpty>
        <IsGreaterThan CompareValue="0" Property="TenantID" Prepend="And">
          TenantID = @TenantID
        </IsGreaterThan>
      </Dynamic>      
    </Statement>
    
    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO admin_Group
      (ID
      ,Name
      ,Description
      ,IsActive
      ,TenantID
      ,LastUpdateTime
      ,LastUpdateUserID)
      VALUES
      (@ID
      ,@Name
      ,@Description
      ,@IsActive
      ,@TenantID
      ,@LastUpdateTime
      ,@LastUpdateUserID);
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete admin_Group
      <Include RefId="QueryParams"/>
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE admin_Group
      SET
      Name=@Name,
      Description=@Description,
      IsActive=@IsActive,
      TenantID=@TenantID,
      LastUpdateTime=@LastUpdateTime,
      LastUpdateUserID=@LastUpdateUserID
      <Include RefId="QueryParams"/>
    </Statement>
   
    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From admin_Group
      <Include RefId="QueryParams"/>
    </Statement>

    <!--获取单条记录 -->
    <Statement Id="GetEntity">
      SELECT ID
      ,Name
      ,Description
      ,IsActive
      ,TenantID
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM admin_Group
      <Include RefId="QueryParams"/>
      Order by ID ASC
    </Statement>

    <!--获取多条记录 -->
    <Statement Id="GetList">
      SELECT ID
      ,Name
      ,Description
      ,IsActive
      ,TenantID
      ,LastUpdateTime
      ,LastUpdateUserID
      FROM admin_Group
      <Include RefId="QueryParams"/>
      Order by ID ASC
  </Statement>

  </Statements>
</SmartSqlMap>